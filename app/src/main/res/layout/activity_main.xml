<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="ogul.ucarsu.com.qrcode.MainActivity">


    <RelativeLayout
        android:id="@+id/layout_myToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <include
            layout="@layout/toolbar" >

        </include>
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Okutulan QR Code Sonucu"
        android:ems="10"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:id="@+id/editText2"
        android:layout_below="@+id/layout_myToolBar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="180dp"
        android:textColor="@color/black"
        android:background="@color/white"
        android:text=""
        android:id="@+id/linktext"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/editText2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Tekrar Taramak İçin İcona Tıkla"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:ems="10"
        android:textStyle="bold"
        android:id="@+id/editText"
        android:layout_above="@+id/tarabutton"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2" />


    <ImageButton
        android:layout_width="95dp"
        android:layout_height="95dp"
        app:srcCompat="@android:drawable/ic_menu_camera"
        android:id="@+id/tarabutton"
        android:layout_marginBottom="95dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />




</RelativeLayout>
